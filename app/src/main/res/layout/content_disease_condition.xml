            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="5dp"-->
            <!--android:layout_weight="3"-->
            <!--app:ms_arrowColor="@color/spinner_arrow_color"-->
            <!--app:ms_baseColor="@color/spinner_base_color"-->
